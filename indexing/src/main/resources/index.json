{
  "settings": {
    "index": {
      "number_of_shards": "3",
      "number_of_replicas": "0"
    },
    "analysis": {
      "analyzer": {
        "customTextAnalyzer": {
          "type": "custom",
          "char_filter": [
            "customTextFilter"
          ],
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "porter_stem",
            "stop"
          ]
        }
      },
      "char_filter": {
        "customTextFilter": {
          "type": "mapping",
          "mappings": [
            "mcdonald's => mcdonald",
            ":( => sad"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "url": {
        "type": "keyword",
        "index": "false"
      },
      "title": {
        "type": "text",
        "analyzer": "customTextAnalyzer"
      },
      "body": {
        "properties": {
          "h1": {
            "type": "text",
            "analyzer": "customTextAnalyzer"
          },
          "h2": {
            "type": "text",
            "analyzer": "customTextAnalyzer"
          },
          "content": {
            "type": "text",
            "analyzer": "customTextAnalyzer"
          }
        }
      },
      "size": {
        "type": "long"
      },
      "updatedTime": {
        "type": "date"
      },
      "tags": {
        "type": "keyword",
        "fields": {
          "suggest": {
            "type": "completion"
          }
        }
      },
      "links": {
        "type": "keyword",
        "index": "false"
      },
      "pageRank": {
        "type": "rank_feature"
      }
    }
  }
}
